{{>header}}
{{>navbar}}
<body>
    <div class="container">
    <h1>{{title}}</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Harvest Date</th>
          <th>Description</th>
          <th>Name</th>
          <th>Email</th>
          <th>Published Date</th>
        </tr>
      </thead>
      <tbody>
      {{#entries}}
        <tr>
          <td class='harvestDate' id='harvestDate'>{{harvestDate}}</td>
          <td class='description' id='description'>{{description}}</a></td>
          <td class='author' id='author'><a href='/user/{{authorId}}'>{{author}}</td>
          <td class='email' id='email'>{{email}}</td>
          <td class='publishedDate' id='publishedDate'>{{publishedDate}}</td>
          <td>
            <form action="/donation/all" method="post">
              <input type="hidden" name="harvestDate" id='harvestDate' value="{{harvestDate}}">
              <input type="hidden" name="description" id='description' value="{{description}}">
              <input type="hidden" name="author" id='author' value="{{author}}">
              <input type="hidden" name="email" id='email' value="{{email}}">
              <input type="hidden" name="authorId" id='authorId' value="{{authorId}}">
              <input type="hidden" name="publishedDate" id='publishedDate' value="{{publishedDate}}">
              <input type="hidden" name="donationId" id='donationId' value="{{_id}}">
              <button class="btn rounded-pill btn-success" type="submit">Claim</button>
            </form>
          </td>
          <td>
            <form action='/donation/delete' method='post'>
              <input type="hidden" name="donationId" id='donationId' value="{{_id}}">
              <button class="btn rounded-pill btn-danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/entries}}
      </tbody>
    </table>
  </div>
{{>footer}}
</body>